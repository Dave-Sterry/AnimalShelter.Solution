@{
    Layout = "_Layout";
}
@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;
@* @model AnimalShelter.Models.Animal; *@

<h1>Animals</h1>

@if (@Model.Count == 0)
{
    <h3>There's no animals in the shelter</h3>
}

<ul>
    @foreach (Animal animal in Model)
    {
        @* <h3>@Html.DisplayNameFor(model => model.AnimalType): @Html.DisplayFor(model => model.AnimalType)</h3> *@
        @* <li>@Html.DisplayNameFor($"{AnimalType}") : @Html.DisplayFor($"{animal.AnimalType}")</li> *@
        <li> @animal.AnimalType : @Html.ActionLink($"{animal.AnimalName}", "Details", new { id = animal.AnimalId}) </li>
    }
</ul>

<p>@Html.ActionLink("Add a new animal", "Create")</p>